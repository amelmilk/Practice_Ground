<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버튼 1"
        android:background="#00ff00"/><!--버튼 색 바꿨는데 테마때문에 적용 안되는듯 실행하면 나옴-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="이건 텍스트뷰입니다"
        android:gravity="center_vertical"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이건 에디트텍스트입니다."
        android:background="#0000ff"/><!--힌트 메세지는 사용자가 다른 메세지를 입력하면 사라진다-->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="20dp"><!--굳이 레이어 나눌필요 없었는듯-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="버튼 2"/>


    </LinearLayout>


</LinearLayout>